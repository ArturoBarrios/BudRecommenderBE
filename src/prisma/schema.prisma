generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  strains  Strain[] @relation("UserStrains")
  stores   Store[]  @relation("UserStores")
}

model Store {
  id           String         @id @default(uuid())
  name         String
  strainStores StrainStore[]
  users        User[]         @relation("UserStores")
}

model Brand {
  id      String   @id @default(uuid())
  name    String   @unique
  strains Strain[]
}

model Strain {
  id             String           @id @default(uuid())
  name           String           @unique
  url            String
  thc            Float
  weight         String[]
  price          String[]
  strainType     String
  strainStores   StrainStore[]
  users          User[]           @relation("UserStrains")
  strainTerpenes StrainTerpene[]
  brandId        String
  brand          Brand            @relation(fields: [brandId], references: [id])
}

model StrainStore {
  id        String  @id @default(uuid())
  strain    Strain  @relation(fields: [strainId], references: [id])
  strainId  String
  store     Store   @relation(fields: [storeId], references: [id])
  storeId   String
  offer     String?
}

model Terpene {
  id             String           @id @default(uuid())
  name           String           @unique
  description    String
  strainTerpenes StrainTerpene[]
}

model StrainTerpene {
  id         String  @id @default(uuid())
  strain     Strain  @relation(fields: [strainId], references: [id])
  strainId   String
  terpene    Terpene @relation(fields: [terpeneId], references: [id])
  terpeneId  String
  percentage Float?
}
